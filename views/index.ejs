    togglemodal('login-modal')
    document.getElementById('error-message').textContent = "<%=error%>"

    '<% if(locals.failedlogin){%>'
        switchmodalcontent()
    '<%}%>'

'<%}%>'

const modal = document.getElementById('login-modal')

window.onclick = function(event) {
  if (event.target == modal) {
    togglemodal('login-modal')
  }
}

</script>